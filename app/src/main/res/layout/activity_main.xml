<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="236"
        android:maxLines="1"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="23 x 9"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="50sp"
        android:layout_marginTop="40dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_operation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_clear_all"
                style="@style/CalculatorButton"
                android:text="@string/ac" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_clear_digit"
                style="@style/CalculatorButton"
                android:text="@string/delete" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/CalculatorButton"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_divided"
                style="@style/CalculatorButton"
                android:text="@string/divide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_seven"
                style="@style/CalculatorButton"
                android:text="@string/_7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eight"
                style="@style/CalculatorButton"
                android:text="@string/_8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nine"
                style="@style/CalculatorButton"
                android:text="@string/_9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_multiple"
                style="@style/CalculatorButton"
                android:text="@string/multiple" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_four"
                style="@style/CalculatorButton"
                android:text="@string/_4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_five"
                style="@style/CalculatorButton"
                android:text="@string/_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_six"
                style="@style/CalculatorButton"
                android:text="@string/_6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_plus"
                style="@style/CalculatorButton"
                android:text="@string/plus" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_one"
                style="@style/CalculatorButton"
                android:text="@string/_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_two"
                style="@style/CalculatorButton"
                android:text="@string/_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_three"
                style="@style/CalculatorButton"
                android:text="@string/_3" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minus"
                style="@style/CalculatorButton"
                android:text="@string/minus"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_coma"
                style="@style/CalculatorButton"
                android:text="@string/coma" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_zero"
                style="@style/CalculatorButton"
                android:text="@string/_0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_equal"
                style="@style/CalculatorButton"
                android:background="#FFC60C"
                android:textColor="@color/white"
                android:text="@string/equal"
                android:layout_weight="8"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>